{
  "GET /api": {
    "description": "serves up a json representation of all the available endpoints of the api"
  },
  "GET /api/topics": {
    "description": "serves an array of all topics",
    "queries": [],
    "exampleResponse": {
      "topics": [{ "slug": "football", "description": "Footie!" }]
    }
  },
  "GET /api/articles": {
    "description": "serves an array of all articles",
    "queries": ["topic"],
    "exampleResponse": {
      "articles": [
        {
          "article_id": 1,
          "title": "Seafood substitutions are increasing",
          "topic": "cooking",
          "author": "weegembump",
          "created_at": "2018-05-30T15:59:13.341Z",
          "article_img_url": "img_url_goes_here"
        }
      ]
    }
  },
  "GET /api/articles/:article_id": {
    "description": "serves up the article found using :article_id parametric endpoint",
    "queries": [],
    "exampleResponse": {
      "article": [
        {
          "article_id": 1,
          "title": "Living in the shadow of a great man",
          "topic": "mitch",
          "author": "butter_bridge",
          "body": "I find this existence challenging",
          "created_at": "2020-07-09T20:11:00.000Z",
          "votes": 100,
          "article_img_url": "https://images.pexels.com/photos/158651/news-newsletter-newspaper-information-158651.jpeg?w=700&h=700"
        }
      ]
    }
  },
  "GET /api/articles/:article_id/comments": {
    "description": "serves an array of all comments for provided article_id",
    "queries": [],
    "exampleResponse": {
      "comments": [
        {
          "comment_id": 5,
          "body": "WILMAAA!",
          "article_id": 1,
          "author": "Fred",
          "votes": 0,
          "created_at": "2021-14-03T21:00:00.000Z"
        }
      ]
    }
  },
  "PATCH /api/articles/:article_id": {
    "description": "Updates the votes value of a chosen article",
    "queries": [],
    "exampleResponse": {
      "article": [
        {
          "article_id": 1,
          "title": "Living in the shadow of a great coder",
          "topic": "mabel",
          "author": "coder_norf",
          "body": "northcoders wuz ere",
          "created_at": "2020-07-09T20:11:00.000Z",
          "votes": 420,
          "article_img_url": "http://images.some.url/path"
        }
      ]
    },
    "exampleRequest": {
      "inc_votes": 3
    }
  },
  "POST /api/articles/:article_id/comments": {
    "description": "posts a comment to article given using article_id",
    "queries": [],
    "exampleResponse": {
      "comment": {
        "comment_id": 1,
        "author": "bobby_b",
        "body": "GET ME WINE, BOY!"
      }
    },
    "exampleRequest": {
      "username": "bobby_b",
      "body": "GET ME WINE, BOY!"
    }
  },
  "DELETE /api/comments/:comment_id": {
    "description": "deletes a comment using provided comment_id",
    "queries": [],
    "exampleResponse": {}
  },
  "GET /api/users": {
    "description": "returns an array of all user objects",
    "queries": [],
    "exampleResponse": {
      "users": [
        {
          "username": "margarine_dam",
          "name": "johnny",
          "avatar_url": "https://this.url/path"
        },
        {
          "username": "username",
          "name": "name",
          "avatar_url": "https://this.url/path"
        }
      ]
    }
  }
}
